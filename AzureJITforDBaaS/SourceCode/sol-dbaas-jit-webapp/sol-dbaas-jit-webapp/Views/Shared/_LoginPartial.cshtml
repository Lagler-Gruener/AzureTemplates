@using System.Security.Principal

@if (User.Identity.IsAuthenticated)
{
    <ul class="nav navbar-nav navbar-right">
        <li class="navbar-text">User: @User.Identity.Name</li>
        <li><a asp-area="AzureAD" asp-controller="Account" asp-action="SignOut">Sign out</a></li>
    </ul>

    foreach (var group in User.FindAll("groups"))
    {
        if (group.Value == "f9e7b7c4-d2a0-41e7-9876-ec4467b41a15")
        {
            <ul class="nav navbar-nav">
                <li><a asp-area="" asp-controller="Admin" asp-action="Admin">Admin</a></li>
            </ul>
        }
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="AzureAD" asp-controller="Account" asp-action="SignIn">Sign in</a></li>
    </ul>
}
